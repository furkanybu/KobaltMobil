<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.21">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fillViewport="true" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:text="Sözl. No :"
                        android:id="@+id/textView29"
                        android:gravity="left|center" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/textContractNo" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:text="Sözl. Tar. :"
                        android:id="@+id/textView31"
                        android:gravity="left|center" />

                    <EditText
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:id="@+id/textContractStartDate" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="fill_parent"
                        android:text="-"
                        android:id="@+id/textView32"
                        android:gravity="center"
                        android:textSize="24dp" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textContractFinishDate"
                        android:layout_weight="0.07" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:text="Müşteri : "
                        android:id="@+id/textView33"
                        android:gravity="left|center" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textPrevalent" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:text="Salon :"
                        android:id="@+id/textView35"
                        android:gravity="left|center" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/spinnerSalon" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:text="Nitelik : "
                        android:id="@+id/textView37"
                        android:gravity="left|center" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/spinnerType" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:text="Rez. Tar."
                        android:id="@+id/textView39"
                        android:gravity="left|center" />

                    <EditText
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:id="@+id/textResStartDate" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="fill_parent"
                        android:text="-"
                        android:id="@+id/textView30"
                        android:gravity="center"
                        android:textSize="24dp" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textResFinishDate"
                        android:layout_weight="0.07" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:text="Türü : "
                        android:id="@+id/textView45"
                        android:gravity="left|center" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/spinnerIsCertain" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:text="Durumu : "
                        android:id="@+id/textView47"
                        android:gravity="left|center" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/spinnerStatus" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:text="Gelin :"
                        android:id="@+id/textView49"
                        android:gravity="left|center" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textBride" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="100dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:text="Damat :"
                        android:id="@+id/textView51"
                        android:gravity="left|center" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textGroom" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/textView52"
                        android:gravity="left|center" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="77dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temizle"
            android:id="@+id/buttonClear"
            android:layout_gravity="right"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ara"
            android:id="@+id/buttonSearch"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
