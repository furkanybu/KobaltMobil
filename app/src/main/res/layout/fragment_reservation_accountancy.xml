<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:text="Toplam Tutar :"
                android:id="@+id/textView55"
                android:gravity="left|center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/textTotalAmount"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:text="İskonto :"
                android:id="@+id/textView53"
                android:gravity="left|center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/textDiscount"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:text="Net Tutar :"
                android:id="@+id/textView44"
                android:gravity="left|center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/textNetAmount"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:text="Nakit : "
                android:id="@+id/textView42"
                android:gravity="left|center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/textCash"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:text="Kredi Kartı :"
                android:id="@+id/textView48"
                android:gravity="left|center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/textBank"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:text="Bordro :"
                android:id="@+id/textView36"
                android:gravity="left|center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/textBordro"
                android:gravity="left|center" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
